/* ------------------------------------------------------------------------------ */
CuesheetView QGraphicsView {
    background-color: rgb(40, 40, 40);
}

/* ------------------------------------------------------------------------------ */
QLineEdit {
    border: 1px solid gray;
    padding: 2px 0px;
    margin-bottom: 0px;
    margin-top: 3px;
    background: rgba(200,200,200, 128);
    selection-background-color: rgb(20,20,20);
    max-height: 12px;
    font-family: Courier;
    font-size: 12px;
}

/* ------------------------------------------------------------------------------ */
QCheckBox {
    padding: 0px;
    margin: 0px;
    spacing: 0px;
}

/* ------------------------------------------------------------------------------ */
QSpinBox, QDoubleSpinBox {
    max-height: 14px;
    font-size: 10px;
    margin: 0px;
    spacing: 0px;
    padding-left: 0px;
    padding-top: 0px;
    padding-bottom: 1px;
    padding-right: 15px;
    border: 1px solid black;
}

/* ------------------------------------------------------------------------------ */
QTabWidget::pane { /* The tab widget frame */
    border: 1px solid grey;
    background-color: #333;
}

QTabWidget::tab-bar {
    left: 5px; /* move to the right by 5px */
}

QTabBar {
    font-family: Futura;
    font-style: italic;
    font-size: 10px;
    background-color: #306;
}

/* Style the tab using the tab sub-control.
   Note that it's QTabBar _not_ QTabWidget */

QTabBar::tab {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #E1E1E1, stop: 0.4 #DDDDDD,
                                stop: 0.5 #D8D8D8, stop: 1.0 #D3D3D3);
    border: 2px solid #C4C4C3;
    border-bottom-color: #C2C7CB; /* same as the pane color */
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    min-width: 15ex;
    max-width: 35ex;
    height: 15px;
    padding-top: 2px;
    padding-bottom: 0px;
    padding-left: 4px;
    padding-right: 2px;
    spacing: 0px;
    margin-right: 1px;
    margin-left: 1px;
}

QTabBar::tab:selected, QTabBar::tab:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #fafafa, stop: 0.4 #f4f4f4,
                                stop: 0.5 #e7e7e7, stop: 1.0 #fafafa);
}

QTabBar::tab:!selected {
    margin-top: 4px; /* make non-selected tabs look smaller */
}

/* make use of negative margins for overlapping tabs */
QTabBar::tab:selected {
    /* expand/overlap to the left and right by 4px */
    margin-left: -4px;
    margin-right: -4px;
    border-color: green;
    border-bottom: 1px;
    margin-bottom: 0px;
    height: 22px;
}

QTabBar::tab:first:selected {
    margin-left: 0; /* the first selected tab has nothing to overlap with on the left */
}

QTabBar::tab:last:selected {
    margin-right: 0; /* the last selected tab has nothing to overlap with on the right */
}

QMainWindow {
    background-color: #522;
}
